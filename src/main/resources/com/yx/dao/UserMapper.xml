<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yx.dao.UserMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.yx.model.User">
                    <id column="id" property="id"/>
                    <result column="stu_no" property="stuNo"/>
                    <result column="username" property="username"/>
                    <result column="nickname" property="nickname"/>
                    <result column="password" property="password"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, username, password, type, remarks
        </sql>


    <select id="queryUserAll" parameterType="com.yx.model.User" resultType="com.yx.model.User">
           select * from tb_user
    </select>

    <select id="queryUserByStuNoAndPwd" resultType="com.yx.model.User"
     parameterType="com.yx.model.User">
        select * from tb_user u  where stu_no=#{stuNo} and u.password=#{password}
    </select>

    <delete id="deleteUserByUsername" parameterType="String">
        delete from tb_user where username=#{username}
    </delete>
</mapper>